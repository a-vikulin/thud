<?xml version="1.0" encoding="utf-8"?>
<!-- Split-panel remote control config (25% left list, 75% right bindings editor) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/editor_padding"
    android:paddingEnd="@dimen/editor_padding"
    android:background="@color/editor_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    <!-- ==================== LEFT PANE (25%) - Remote List ==================== -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/workout_list_background">

        <!-- Header row: Back | Add Remote -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/workout_list_search_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/editor_step_background"
            android:paddingHorizontal="@dimen/workout_list_item_padding">

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/step_action_button_size"
                android:text="@string/remote_close"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/button_secondary"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:paddingHorizontal="@dimen/editor_padding" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnAddRemote"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/step_action_button_size"
                android:text="@string/remote_add"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/button_secondary"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:paddingHorizontal="@dimen/editor_padding" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/editor_divider" />

        <!-- Remote list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRemoteList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false" />

        <!-- Empty state -->
        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/remote_no_remotes"
            android:textColor="@color/text_label_dim"
            android:textSize="@dimen/text_editor_label"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Vertical divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/editor_divider" />

    <!-- ==================== RIGHT PANE (75%) - Bindings Editor ==================== -->
    <LinearLayout
        android:id="@+id/rightPane"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <!-- Header: Alias + Delete -->
        <LinearLayout
            android:id="@+id/bindingsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/editor_padding"
            android:gravity="center_vertical"
            android:background="@color/editor_step_background">

            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_editor_title"
                android:textColor="@color/text_primary"
                android:padding="@dimen/editor_input_padding"
                android:maxLines="1"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btnDeleteRemote"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/step_action_button_size"
                android:layout_marginStart="@dimen/editor_padding"
                android:text="@string/remote_delete"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/btn_close"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:paddingHorizontal="@dimen/editor_padding" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/editor_divider" />

        <!-- Universal Toggle Mode row -->
        <LinearLayout
            android:id="@+id/toggleModeRow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/remote_action_row_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/remote_action_row_padding"
            android:background="@color/editor_step_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/editor_input_margin"
                android:text="@string/remote_action_toggle_mode"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_step_type"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnToggleModeKey"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/remote_key_button_height"
                android:minWidth="@dimen/remote_key_button_min_width"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_step_details"
                android:backgroundTint="@color/editor_input_background"
                android:textAllCaps="false"
                android:paddingHorizontal="@dimen/editor_input_padding" />

            <CheckBox
                android:id="@+id/cbConsumeAllKeys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remote_consume_all_keys"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_step_details"
                android:layout_marginStart="@dimen/editor_input_margin" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/editor_divider" />

        <!-- Two-column area -->
        <LinearLayout
            android:id="@+id/columnsArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Left column: tHUD actions (Mode 1) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/remote_mode1_column">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remote_column_thud"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_step_details"
                    android:padding="@dimen/remote_action_row_padding"
                    android:background="@color/remote_mode1_column" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/editor_divider" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvThudBindings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <!-- Vertical divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/editor_divider" />

            <!-- Right column: Android actions (Mode 2) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/remote_mode2_column">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remote_column_android"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_step_details"
                    android:padding="@dimen/remote_action_row_padding"
                    android:background="@color/remote_mode2_column" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/editor_divider" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAndroidBindings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Placeholder when no remote selected -->
        <TextView
            android:id="@+id/tvNoSelection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/remote_no_remotes"
            android:textColor="@color/text_label_dim"
            android:textSize="@dimen/text_editor_label"
            android:visibility="gone" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
