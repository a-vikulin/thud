    <!-- ==================== HUD Colors ==================== -->
    <!-- Note: Gray colors have subtle blue tint (saturation > 25) to ensure they're
         preserved during DRM wallpaper substitution instead of being blended -->

    <!-- Main HUD background (blue-tinted dark gray for DRM visibility) -->
    <color name="hud_background">#CC2A2A48</color>

    <!-- Text colors (blue-tinted grays) -->
    <color name="text_primary">#FFFFFF</color>
    <color name="text_label">#AAAAC8</color>
    <color name="text_label_dim">#8888A8</color>
    <color name="text_on_zone">#CCFFFFFF</color>

    <!-- Box backgrounds -->
    <color name="box_interactive">#44FFFFFF</color>
    <color name="box_data">#33FFFFFF</color>
    <color name="box_heart_rate">#33FF4444</color>
    <color name="box_service">#338888A8</color>

    <!-- Close button -->
    <color name="btn_close">#FF6666</color>
    <color name="service_button_border">#8888A8</color>

    <!-- Toggle button states (chart, camera) -->
