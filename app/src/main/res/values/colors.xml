    <!-- ==================== DFA Alpha1 Zones ==================== -->

    <color name="dfa_zone_aerobic">#3344DD44</color>      <!-- Green: alpha1 > 0.75, aerobic -->
    <color name="dfa_zone_transition">#33FFAA00</color>    <!-- Amber: 0.5-0.75, transition -->
    <color name="dfa_zone_anaerobic">#33FF4444</color>     <!-- Red: < 0.5, anaerobic -->
    <color name="dfa_zone_no_data">#339999B8</color>       <!-- Gray: no data -->

    <!-- ==================== Heart Rate Zones ==================== -->

    <color name="hr_zone_1">#9999B8</color>  <!-- Blue-tinted grey - recovery -->
    <color name="hr_zone_2">#4488FF</color>  <!-- Blue - easy -->
    <color name="hr_zone_3">#44DD44</color>  <!-- Green - aerobic -->
    <color name="hr_zone_4">#FFAA00</color>  <!-- Orange - threshold -->
    <color name="hr_zone_5">#FF4444</color>  <!-- Red - max -->

    <!-- ==================== Workout Chart Colors ==================== -->

    <!-- Chart background (blue-tinted dark gray for DRM visibility) -->
    <color name="chart_background">#AA2A2A48</color>
    <!-- Grid: opaque blue-tinted gray (saturation 54 > 25, preserved in screenshots) -->
