    <color name="chart_grid">#5A5A90</color>
    <color name="chart_axis_label">#AAAAC8</color>    <!-- Axis label text (blue-tinted) -->

    <!-- Speed: bright for live line + toggle symbol, dim for target outline + toggle background -->
    <color name="chart_speed">#FFCA28</color>
    <color name="chart_speed_dim">#806510</color>

    <!-- Incline: bright for live line + toggle symbol, dim for target outline + toggle background -->
    <color name="chart_incline">#AD7EFF</color>
    <color name="chart_incline_dim">#5A4080</color>

    <!-- HR: bright for toggle symbol, dim for toggle background (line uses zone colors) -->
    <color name="chart_hr">#FF4444</color>
    <color name="chart_hr_dim">#802222</color>

    <!-- Power: bright for toggle symbol, dim for toggle background (line uses zone colors) -->
    <color name="chart_power">#44FF44</color>
    <color name="chart_power_dim">#228022</color>

    <!-- Fit/Scale: bright for toggle symbol, dim for toggle background (fit all data mode) -->
    <color name="chart_fit">#AAAAC8</color>
    <color name="chart_fit_dim">#555575</color>

